    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Cat Debug",
            "program": "${workspaceFolder}/src/cat/s21_cat",
            "args": ["-s", "tests/empty.txt"],
            "cwd": "${workspaceFolder}/src",
            "preLaunchTask": "Build debug cat"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Grep Debug",
            "program": "${workspaceFolder}/src/grep/s21_grep",
            "args": ["-o", "the", "tests/other_text.txt", "tests/some_text.txt"],
            "cwd": "${workspaceFolder}/src",
            "preLaunchTask": "Build debug grep"
        }
    ]
}